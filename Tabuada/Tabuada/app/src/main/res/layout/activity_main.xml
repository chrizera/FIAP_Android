<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.logonrm.tabuada.MainActivity">

    <ImageView android:id="@+id/imgGarrafa0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/garrafa"/>

    <ImageView android:id="@+id/imgGarrafa1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/imgGarrafa0"
        android:src="@drawable/garrafa"/>

    <ImageView android:id="@+id/imgGarrafa2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/imgGarrafa1"
        android:src="@drawable/garrafa"/>

    <ImageView android:id="@+id/imgGarrafa3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/imgGarrafa2"
        android:src="@drawable/garrafa"/>

    <ImageView android:id="@+id/imgLixo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/lixo"/>

    <TextView android:id="@+id/textNumber1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="100sp"
        android:textColor="#000000"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="97dp" />

    <TextView android:id="@+id/textOperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:textSize="100dp"
        android:textColor="#000000"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/textNumber1"
        android:layout_alignBaseline="@id/textNumber1" />

    <TextView android:id="@+id/textNumber2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="100sp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/textOperator"
        android:layout_alignBaseline="@id/textNumber1" />

    <EditText android:id="@+id/textAnswer"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:textColor="#000000"
        android:background="#FF0000"
        android:layout_centerInParent="true"
        android:layout_below="@id/textOperator"
        android:inputType="number"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Conferir"
        android:textColor="#FF0000"
        android:background="#000000"
        android:layout_alignParentBottom="true"
        android:onClick="conferir"/>



</RelativeLayout>
